<!doctype html>
<html lang="en" >

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="./css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="./css/main.css">

    <script src="./js/index.js"></script>    

    <title>Music Album</title>
</head>

<body>
    <header class="shadow">
        <%- include ('./include/header.ejs') %>

    </header>

    <section class="mt-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">

                    <% if (user) { %>
                        <h4 class="fw-bold mb-4"> Welcome to your album <%= user.name %>! </h4>
                        <% } else { %>
                            <h4 class="fw-bold mb-4"> Welcome to music album </h4>
                            <% } %>
                </div>
                <div class="col-md-6 mt-4 mt-md-0">
                    <img class="img-fluid" src="./images/img_1.png" alt="">
                </div>
            </div>
        </div>
    </section>

    <div style="height: 150px; overflow: hidden;"><svg viewBox="0 0 500 150" preserveAspectRatio="none"
            style="height: 100%; width: 100%;">
            <path d="M0.00,49.99 C150.00,150.00 349.20,-49.99 500.00,49.99 L500.00,150.00 L0.00,150.00 Z"
                style="stroke: none; fill: #f8f9fa;">
            </path>
        </svg>
    </div>
    <section class="bg-light">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-4">
                    <!-- <i class="bi bi-person-plus icon fs-2 mb-4"></i>
                    
                    <p class="fw-bold">
                        Here you can add a new user
                    </p> -->
                    
                </div>
                <div class="col-md-8">

                        <ul id="mymusic" class="musics ">
                            <%if (musics && JSON.stringify(musics) != '{}'){ %>
                                <% musics.forEach(function(o,i) { %>
                                    <li>
                                        <div class="row align-items-center">
                                            <div class="col-xxl-6  col-xl-6 col-lg-6 col-md-9 col-sm-8 col">
                                            <audio caption="hello world" id="Audio<%=i %>" onended="PlayEnded(<%=i %>)" controls preload="auto">
                                                <source src="/audio/<%=o.name %>" type="audio/mpeg">
                                            </audio>
                                            </div>
                                            <div class="col-xxl-6  col-xl-6 col-lg-6 col-md-3 col-sm-4 col">
                                            <span><%=o.name %></span>
                                            </div>
                                        </div>
                                        </li>                          
                                    <% }); %>
                                    <% } %>
                        </ul>
                        <!-- <div class="row">
                            
                            <div class="col-6 text-center">
                                <button type="button" onclick="ProcessMusics()" class="btn btn-primary">Refresh</button>    
                            </div>
                            <div class="col-6">

                            </div>
                        </div>                        -->

                </div>
            </div>
        </div>
    </section>
    <div style="height: 100px; overflow: hidden;"><svg viewBox="0 0 500 150" preserveAspectRatio="none"
            style="height: 100%; width: 100%;">
            <path d="M0.00,49.99 C150.00,150.00 271.49,-49.99 500.00,49.99 L500.00,0.00 L0.00,0.00 Z"
                style="stroke: none; fill: #f8f9fa;">
            </path>
        </svg>
    </div>

    <section class="bg-white">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-4">
                    <!-- <i class="bi  bi-pencil-square icon fs-2 mb-4"></i>
                    
                    <p class="fw-bold">
                        Here you can edit <br>or delete one of current users
                    </p> -->
                    
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-6">

                        </div>
                        <div class="col-md-6 mt-5">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div style="height: 110px; overflow: hidden;"><svg viewBox="0 0 500 150" preserveAspectRatio="none"
            style="height: 100%; width: 100%;">
            <path d="M0.00,49.99 C150.00,150.00 349.20,-49.99 500.00,49.99 L500.00,150.00 L0.00,150.00 Z"
                style="stroke: none; fill: #f8f9fa;">
            </path>
        </svg>
    </div>
    <%- include ('./include/footer.ejs') %>

    <script src="./js/bootstrap.bundle.min.js"   ></script>
</body>

</html>
